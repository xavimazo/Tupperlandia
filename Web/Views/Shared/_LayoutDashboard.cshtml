        <li><a class="waves-effect" href="~/StockStatus"><i class="material-icons">power_settings_new</i>Estados de publicacion</a></li>
        <li><a class="waves-effect" href="~/Discount"><i class="material-icons">local_offer</i>Descuentos</a></li>
        <li><a class="waves-effect" href="~/Dispatch"><i class="material-icons">gps_fixed</i>Despacho</a></li>
        <li><a class="waves-effect" href="~/Description"><i class="material-icons">description</i>Descripciones</a></li>
    </ul>
</div>
