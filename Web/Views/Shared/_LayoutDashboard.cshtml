                <a href="#!user"><img class="circle" src="~/Content/Dashboard/Perfil.jpg"></a>
                <a href="#!name"><span class="white-text name">John Doe</span></a>
                <a href="#!email"><span class="white-text email">jdandturk@gmail.com</span></a>
            </div>
        </li>
        <li><a class="waves-effect" href="~/Dashboard/Index#"><i class="material-icons">timeline</i>Estadisticas</a></li>
        <li><div class="divider"></div></li>
        <li><a class="subheader">Subheader</a></li>
        <li><a class="waves-effect" href="~/User"><i class="material-icons">face</i>Usuarios</a></li>
        <li><a class="waves-effect" href="~/Client"><i class="material-icons">people</i>Clientes</a></li>
        <li><a class="waves-effect" href="~/Product"><i class="material-icons">style</i>Productos</a></li>
        <li><a class="waves-effect" href="~/Stock"><i class="material-icons">apps</i>Stock</a></li>
        <li><a class="waves-effect" href="~/Sale"><i class="material-icons">add_shopping_cart</i>Ventas</a></li>
        <li><div class="divider"></div></li>
