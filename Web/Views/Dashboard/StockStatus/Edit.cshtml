@model Data.StockStatus
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container wrapped">
    <div class="row">
        <form class="col s12" action="/StockStatus/Edit" method="post">
            <br />
            @Html.HiddenFor(x => x.StockStatusId)
            <div class="row">
                <div class="input-field col s3">
                    @Html.EditorFor(x => x.StockStatusDescription)
                    @Html.LabelFor(x => x.StockStatusDescription)
                </div>
                <div class="input-field col s3">
                    <button type="submit" class="waves-effect waves-light btn col s6"><i class="material-icons left">mode_edit</i>Editar</button>
                </div>
            </div>
        </form>
    </div>
</div> 