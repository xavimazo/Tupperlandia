@model IList<Data.Stock>
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="wrapper">
    <table class="highlight centered">
        <br />
        <div class="center">
            <a href="/Stock/Create" class="waves-effect waves-light btn"><i class="material-icons left">style</i>Crear stock</a>
        </div>
        <br />
        <thead>
            <tr>
                <th>Id</th>
                <th>Producto</th>
                <th>Capacidad</th>
                <th>Color</th>
                <th>Weight</th>
                <th>Lenght</th>
                <th>Width</th>
                <th>Height</th>
                <th>Diameter</th>
                <th>Categoria</th>
                <th>Linea</th>
                <th>Origen</th>
                <th>Precio</th>
                <th>Estado</th>
                @*<th>Descuento</th>*@
                <th>Stock</th>
                <th>Imagen</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in Model)
        {
            <tr>
                <td>@stock.StockId</td>
                <td>@stock.Product.ProductName</td>
                <td>@stock.Capacity</td>
                <td>@stock.Color</td>
                <td>@stock.Weight</td>
                <td>@stock.Lenght</td>
                <td>@stock.Width</td>
                <td>@stock.Height</td>
                <td>@stock.Diameter</td>
                <td>@stock.Categorie.CategorieDescription</td>
                <td>@stock.Line.LineDescription</td>
                <td>@stock.Price</td>
                <td>@(stock.StockStatus.StockStatusDescription != null ? stock.StockStatus.StockStatusDescription : "")</td>
               @* <td>@stock.Discount.DiscountPercentage</td>*@
                <td>@stock.Quantity</td>
                <td><a href="#!user"><img width="50" height="50" class="circle" src="@stock.Image"></a></td>
                <td><a href="/Stock/Edit/@stock.StockId"><i class="small material-icons">mode_edit</i></td>
                <td><a href="/Stock/Delete/@stock.StockId"><i class="small material-icons">delete</i></td>
                <td><a href="#!user"><img width="50" height="50" class="circle" src="~/Content/ProductsImages/EcoTwist500mlVioleta.jpg"></a></td>
            </tr>
    }
        </tbody>
    </table>
</div>