@model Data.Client
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="container">
    <div class="row wrapper">
        <form class="col s12" action="/Client/Edit" method="post">
            <br />
            @Html.HiddenFor(x => x.ClientId)
            <div class="row">
                <div class="input-field col s3">
                    @Html.EditorFor(x => x.ClientName)
                    @Html.LabelFor(x => x.ClientName)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.ClientLastName)
                    @Html.LabelFor(x => x.ClientLastName)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.SendAdditionalDescription)
                    @Html.LabelFor(x => x.SendAdditionalDescription)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.DNI)
                    @Html.LabelFor(x => x.DNI)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.Contact)
                    @Html.LabelFor(x => x.Contact)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.Contact2)
                    @Html.LabelFor(x => x.Contact2)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.AddressStreet)
                    @Html.LabelFor(x => x.AddressStreet)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.AddressNumber)
                    @Html.LabelFor(x => x.AddressNumber)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.AddressDepartment)
                    @Html.LabelFor(x => x.AddressDepartment)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.AddressFlat)
                    @Html.LabelFor(x => x.AddressFlat)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.City)
                    @Html.LabelFor(x => x.City)
                </div><div class="input-field col s3">
                    @Html.EditorFor(x => x.Province)
                    @Html.LabelFor(x => x.Province)
                </div><div class="input-field col s3">
                    <button type="submit" class="waves-effect waves-light btn col s6"><i class="material-icons left">mode_edit</i>Editar</button>
                </div>
            </div>
        </form>
    </div>
</div>

